<!DOCTYPE html>

<html lang="en">
    <head>
        <title>Home</title>
        <meta name="description" content="Homepage for project">
        <meta charset="UTF-8">
        <link rel="stylesheet" type="text/css" href="/css/new-item.css">
        <script src="https://kit.fontawesome.com/c8298cfebf.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <header>
            <h1 class="title">VediaGames</h1>
            <div class="logo"><a href="/"><img src="/images/logo.png" alt="logo"></a></div>
            <%if(!user){%>
                <a href="/users/new" class="sign-up">Sign-Up</a>
                <a href="/users/login" class="log-in">Log-In</a>
            <%} else {%>
                <a href="/users/profile" class="profile">Profile</a>
                <a href="/users/logout" class="log-out">Log-Out</a>
            <%}%>
            <a href="/sales/new" class="sell">Sell</a>
            <a href="/sales" class="browse">Browse</a>
            <form method="GET" action="/sales/search">
                <input type="text" id="search" name="search" placeholder="Search..">
                <button type="submit" class="search-icon"><div><i class="fa-solid fa-magnifying-glass"></i></div></button>
            </form>
            <div id="banner"></div>
        </header>
        <div class = "content">


            <% if(errorMessages.length > 0) {%>
                <% errorMessages.forEach(message=>{%>
                    <div class='error'>
                        <%=message%>
                    </div>
                    <%});%>
                        <%}%>
            
                            <% if(successMessages.length > 0) {%>
            
                                <% successMessages.forEach(message=>{%>
                                    <div class='success'>
                                        <%=message%>
                                    </div>
                                    <%});%>
                                        <%}%>