<%- include('../partials/indexHeader.ejs')%>
    <div class="main-section">
        <h2>Welcome, <%=user.firstName%></h2>
        <%if(sales.length){%>
            <p>You have listed the following items for sale</p>

            <div class="main-body">
                <div class="grid-headder">
                    <h3>Items</h3>
                </div>
                <div class="grid-headder">
                    <h3>Status</h3>
                </div>
                <div class="grid-headder">
                    <h3>Actions</h3>
                </div> 
                <%sales.forEach(sale => {%>
                    <div class="grid-item"><a href="/sales/<%= sale.id%>"><p><%= sale.title%></p></a></div>
                    <div class="grid-item">
                        <%if(sale.active){%>
                            <p>Active</p>
                        <%} else {%>
                            <p>Inactive</p>
                        <%}%>
                    </div>
                    <div class="grid-item">
                        <form>
                            <button type="submit" formmethod="get" formaction="/sales/<%= sale.id%>/edit">Edit</button>
                            <button type="submit" formmethod="post" formaction="/sales/<%= sale.id%>?_method=DELETE">Delete</button>
                            <%if(sale.totalOffers > 0){%>
                                <button type="submit" formmethod="get" formaction="/sales/<%= sale.id%>/offers">Veiw Offers</button>
                            <%}%>
                        </form>
                    </div>
                <%})%>
            </div>
        <%} else {%>
            <p>you have not listed any items yet.</p>
        <%}%>


        <%if(offers.length){%>
            <p>My Offers</p>

            <div class="main-body">
                <div class="grid-headder">
                    <h3>Items</h3>
                </div>
                <div class="grid-headder">
                    <h3>Status</h3>
                </div>
                <div class="grid-headder">
                    <h3>Amount</h3>
                </div> 
                <%offers.forEach(offer => {%>
                    <div class="grid-item"><a href="/sales/<%= offer.item%>"><p><%= offer.title.title%></p></a></div>
                    <div class="grid-item"><p><%= offer.status%></p></div>
                    <div class="grid-item">
                        <p>$<%= offer.amount%></p>
                    </div>
                <%})%>
            </div>
        <%} else {%>
            <p>you have not made any offers yet.</p>
        <%}%>
        
        

            
            
            
