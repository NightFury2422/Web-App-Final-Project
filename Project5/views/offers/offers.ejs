<%- include('../partials/indexHeader.ejs')%>
    <div class="main-section">
        <h2>Offers recived for, <%= sale.title%></h2>
        <%if(offers.length){%>
            <p>Here are the offers for the item listed above</p>

            <div class="main-body">
                <div class="grid-headder">
                    <h3>Buyer</h3>
                </div>
                <div class="grid-headder">
                    <h3>Amount</h3>
                </div>
                <div class="grid-headder">
                    <%if(sale.active == true){%>
                        <h3>Actions</h3>
                    <%}else{%>
                        <h3>Status</h3>
                    <%}%>
                    
                </div> 
                <%offers.forEach(offer => {%>
                    <div class="grid-item"><p><%= offer.name.firstName%> <%= offer.name.lastName%></p></div>
                    <div class="grid-item"><p>$<%= offer.amount%></p></div>
                    <div class="grid-item">
                        <%if(sale.active == true){%>
                            <form>
                                <button type="submit" formmethod="post" formaction="/sales/<%= sale.id%>/offers/<%= offer.id%>">Accept</button>
                            </form>
                        <%}else{%>
                            <p><%= offer.status%></p>
                        <%}%>
                        
                    </div>
                <%})%>
            </div>
        <%} else {%>
            <p>there are no offers on this item yet.</p>
        <%}%>
